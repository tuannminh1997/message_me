<h2 class="ui center aligned medium icon header">
  <i class="circular blue facebook messenger icon"></i>
  Hello <%= current_user.username %>
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui card fluid raised chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content" id="room_messages"
           data-channel-subscribe="room"
           data-room-id="<%= @chatroom.id %>">
        <%= form_with model: @message, url: message_path, class: "ui reply form", local: false do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.hidden_field :chatroom_id, value: @chatroom.id %>
              <%= f.text_field :body, placeholder: "Enter a message" %>
              <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui card fluid raised chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>